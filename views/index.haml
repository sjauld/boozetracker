.container
  %h1="Leaderboard - #{@year.to_s}"
  .table.table-hover
    %table.table.table-hover
      %thead
        %tr
          %th{scope: :col} Name
          %th{scope: :col} Dry Days
          %th{scope: :col} Score
      %tbody
        -@leaderboard.sort{|x,y| [y[1][:score], x[1][:dry_days]] <=> [x[1][:score],y[1][:dry_days]]}.each do |user|
          %tr
            -puts "View: #{user.inspect}"
            %th{scope: :row}
              %a{href: "/users/#{user[1][:user].id}"}=user[1][:user].name
            %td=user[1][:dry_days]
            %td=user[1][:score] || 'TBI'
